border-1px($color)
  position:relative
  &:after
    display:block
    position:absolute
    left:0
    bottom:0
    width:100%
    border-top:1px solid $color
    content:' '

border-none()
  &:after
    display : none

bg-img($url)
  background : url("images/" + $url + "@2x.png") no-repeat center center
  background-size : cover
  @media (-weblit-min-device-pixel-ratio: 3),(min-device-pixel-ratio:3)
    background : url("images/" + $url + "@3x.png") no-repeat center center
    background-size : cover

textOverflow()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap


